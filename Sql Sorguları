exec aris_bankabakiyeler_exec
------------------------------------------------------------------
SELECT 
(BORC -ALACAK ) AS BAKIYE  FROM(

	SELECT 
		SUM(CASE WHEN DURUM = 'A' THEN BAKIYE ELSE 0 END) AS ALACAK,
		SUM(CASE WHEN DURUM = 'B' THEN BAKIYE ELSE 0 END) AS BORC
	
	FROM 
		aris_bankabakiyeler
	WHERE 
		HESAPSEKLI = 'Vadesiz Mevduat'


)AS Q
------------------------------------------------------------------
